<h3>Create new form</h3>
<br />
<span>Enter Form Name: </span><input type="text" size=25>
<br/>
<div class="fields-list">
{{#each model.fields as |field|}}
    {{field-item field=field showDelete=true
        updateHiddenFields=(action "updateHiddenFields")
        deleteField=(action "deleteField")}}
{{/each}}
</div>
<div class="btn-group">
<button  class="btn-primary" {{action "addNewField"}}>Add Field </button>
</div>
<div class="form-actions">
<button class="btn-submit-form" {{action "createForm"}}>Create Form</button>
<button class="btn-cancel-form" {{action "cancelForm"}}>Cancel</button>
</div>
{{outlet}}
